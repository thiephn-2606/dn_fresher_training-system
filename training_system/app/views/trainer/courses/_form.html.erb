<%= form_for [:trainer, @course], class: "form-group" do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: "form-control" %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  
  <%= f.fields_for :user_courses do |ff| %>
    <%= ff.label :user_id %>
    <%= ff.collection_select :user_id, user_select, :id, :name,
      {include_blank: false, include_hidden: false},
      { multiple: true, class: "select form-control"} %>
  <% end %>

  <%= f.fields_for :course_subjects do |cs| %>
    <%= cs.label :subject_id %>
    <%= cs.collection_select :subject_id, courses_select, :id, :name,
      {include_blank: false, include_hidden: false},
      { multiple: true, class: "select form-control"} %>
  <% end %>

  <div class="col-lg-6 col-5 text-right btn-courses">
    <%= link_to I18n.t("courses.form.back"), trainer_courses_path, class: "btn btn-primary" %>
    <%= f.submit I18n.t("courses.form.submit"), class: "btn btn-success" %>
  </div>
<% end %>
