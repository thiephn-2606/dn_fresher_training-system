<tr>
  <th scope="row">
    <div class="media align-items-center">
      <div class="media-body">
        <span class="name mb-0 text-sm"><%= course.name %></span>
      </div>
    </div>
  </th>
  <td class="budget">
    <%= l(course.start_date) %>
  </td>
  <td>
    <span class="badge badge-dot mr-4">
      <i class="bg-warning"></i>
      <span class="status"><%= course.status %></span>
    </span>
  </td>
  <td>
    <%= link_to t("views.course.index.detail_course"), trainee_course_path(course.id), class: "btn btn-info" %>
  </td>
</tr>
